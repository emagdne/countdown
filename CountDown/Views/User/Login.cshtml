@model dynamic

@{
    ViewBag.Title = "Login";
    ViewBag.NavRight = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts
{
    <script type="text/javascript">
        $(function() {
            $("input[name=email]").focus();
        });
    </script>    
}

<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <form action="" method="POST">
                <div id="login-errors" class="top-buffer">
                    @if (false) // todo: write condition to show validation errors
                    {
                    }
                </div>
                <div id="login-fields">
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Email address" />
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Password" />
                    </div>
                </div>
                <div class="form-block-button">
                    <input type="submit" class="btn btn-primary btn-block" value="Login" />
                </div>
            </form>
            <div class="form-block-button">
                <button class="btn btn-default btn-block">Reset Password</button>
            </div>
            <div class="form-block-button">
                <input type="button" class="btn btn-default btn-block" value="Register" onclick=" window.location.href = '@Url.Action("Register")' "/>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>